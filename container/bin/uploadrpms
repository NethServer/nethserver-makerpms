set -e

cd $(rpm --eval '%_topdir')

username=$(whoami)
for arg in "$@"; do
    if [[ $arg =~ \@ ]]; then
        username=${arg%%\@*}
        break
    fi
done

tmpcmd=$(mktemp)

trap "rm -f $tmpcmd" EXIT

(
    spool=$(mktemp -u "${username}${TARGET_ENDPOINTS:+@}${TARGET_ENDPOINTS}.${BUILD_ID:-XXXX}.XXXXXX");
    echo "mkdir $spool";
    echo "cd $spool";
    if [[ "$GITHUB_ACTIONS" && "$PULL_REQUEST_BRANCH" && "$GPG_SIGN_KEY" ]]; then
        echo "$GPG_SIGN_KEY" | gpg --import > /dev/null
        while IFS= read -r -d '' file
        do
            gpg --encrypt --yes --trust-model always --user nethinfra@nethesis.it "$file" > /dev/null
            echo "put $F.gpg";
        done < <(find . -name '*.rpm' -print0)
    else
        for F in $(find . -name '*.rpm'); do
            echo "put $F";
        done;
    fi
    echo "cd ..";
    echo "rename $spool commit-$spool"
) >>$tmpcmd

sftp -b "${tmpcmd}" "$@"
